{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib-tsc",
    "declaration": true,
    "sourceMap": true,

    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "Node",

    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib", "tests"]
}

